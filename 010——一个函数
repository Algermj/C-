#include<stdio.h>
void main()
{
int  x,y;
while(1)
{
    printf("请输入X值\n");
	scanf("%d",&x);
if(x>=0&&x<2)
{
	y=x;printf("Y=%d\n",y);
}
else if(x>=2&&x<4)
{
y=2*x-2;printf("Y=%d\n",y);
}
else if(x>=4)
{
	y=3*x-6;printf("Y=%d\n",y);
}
else 
{
     break;
}
}
	printf("X不在定义域！！");
	getchar();	getchar();
}
